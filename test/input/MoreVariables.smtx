main module MoreVariables {

    @decl(x, int);
    @bind(x, 10);

    $add six to x$
    (x: int) -> int {
        @addint(6, x)
    }

    $change global to n$
    (n: int) {
        @bind(x, n);
    }

    @printint(add six to x);
    @printstring("\n");

    change global to 6;
    @printint(add six to x);
    @printstring("\n");
}